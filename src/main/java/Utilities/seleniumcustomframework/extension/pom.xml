<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
    <!--Enable while running in jenkins -->
    <!--    <localRepository>/tmp/slavescache/maven/.m2/repository</localRepository>-->
    <servers>
        <server>
            <id>isban</id>
            <username>${MAVEN_USERNAME}</username>
            <password>${MAVEN_PASSWORD}</password>
        </server>
        <server>
            <id>gitlab-uk-scm-server</id>
            <username>${GIT_USER}</username>
            <password>${GIT_PASSWORD}</password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>hyperloop</id>
            <mirrorOf>*</mirrorOf>
            <name>UK Repository</name>
            <url>https://nexus-proxy.almuk.santanderuk.corp/repository/maven-public/</url>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>generic-isban-uk</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>uk-alm-repo</id>
                    <url>https://nexus.almuk.santanderuk.corp/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>snapshots-repo</id>
                    <url>https://nexus.almuk.santanderuk.corp/repository/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>releases-repo</id>
                    <url>https://nexus.almuk.santanderuk.corp/repository/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <properties>
                <uk.nexus.url>https://nexus.almuk.santanderuk.corp</uk.nexus.url>
                <releases.url>${uk.nexus.url}/repository/maven-releases/</releases.url>
                <snapshots.url>${uk.nexus.url}/repository/maven-snapshots/</snapshots.url>
            </properties>
        </profile>
    </profiles>
</settings>
